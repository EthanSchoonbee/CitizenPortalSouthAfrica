<UserControl x:Class="CitizenPortalSouthAfrica.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CitizenPortalSouthAfrica.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600">
    <Grid>
        <local:MenuComponentView DockPanel.Dock="Top" />
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Citizen Portal" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Report Issues" Command="{Binding NavigateToReportIssuesCommand}" 
                    Width="300" Height="50" 
                    Margin="0,0,0,10" />
            <Button Content="Local Events and Announcements" Command="{Binding NavigateToEventsAndAnnouncementsCommand}" IsEnabled="False" 
                    Width="300" Height="50" 
                    Margin="0,0,0,10" />
            <Button Content="Service Request Status" Command="{Binding NavigateToRequestStatusCommand}" IsEnabled="False" 
                    Width="300" Height="50" 
                    Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</UserControl>
