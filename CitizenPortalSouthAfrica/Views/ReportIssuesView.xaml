<UserControl x:Class="CitizenPortalSouthAfrica.Views.ReportIssuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CitizenPortalSouthAfrica.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="600">
    <Grid>

        <local:MenuComponentView DockPanel.Dock="Top" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Report an Issue Here" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Form Completion:" FontWeight="Bold" Margin="0,10,0,5" />
            <ProgressBar Minimum="0" Maximum="100" 
                         Value="{Binding FormCompletionPercentage}" 
                         Width="300" Height="5" Margin="0,0,0,10" />
            <TextBlock Text="{Binding FormCompletionPercentage, StringFormat={}{0}%}" 
                       HorizontalAlignment="Center" />

            <TextBlock Text="Issue Location :" FontWeight="Bold"/>
            <TextBox x:Name="LocationTextBox" 
                         Text="{Binding Location, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Width="300" Height="30" 
                         />

            <TextBlock Text="Issue catagory :" FontWeight="Bold"/>
            <ComboBox x:Name="CategoryComboBox" 
                        Width="300" Margin="0,10,0,10"
                        SelectedValue="{Binding Category, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SelectedValuePath="Content">
                <ComboBoxItem Content="Sanitation"/>
                <ComboBoxItem Content="Roads"/>
                <ComboBoxItem Content="Utilities"/>
            </ComboBox>

            <TextBlock Text="Description of issue:" FontWeight="Bold"/>
            <RichTextBox x:Name="DescriptionRichTextBox" 
                             Width="300" Height="100"
                             Margin="0,10,0,10"
                             VerticalScrollBarVisibility="Auto"
                             AcceptsReturn="True">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>

            <Button Content="Attach Media" Width="300" Margin="0,0,0,10" 
                    Command="{Binding AttachFilesCommand}" />

            <TextBlock Text="Attached Files :" FontWeight="Bold"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding FileNames}" Width="300" Height="50" MaxHeight="50" 
                         Margin="0,10,0,10" VerticalAlignment="Top">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding}" 
                                           Margin="0,0,10,0" 
                                           Grid.Column="0" 
                                           TextTrimming="CharacterEllipsis" 
                                           ToolTip="{Binding}" 
                                           />

                                <Button Content="Remove" 
                                        Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                                        CommandParameter="{Binding}" 
                                        Width="75" 
                                        Margin="10,0,0,0" 
                                        Grid.Column="1" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>

            <Button Content="Submit" Width="300" Margin="0,0,0,10" 
                    Command="{Binding SubmitCommand}" />

            <Button Content="Back to Home" Width="300" 
                    Command="{Binding NavigateToHomeCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
